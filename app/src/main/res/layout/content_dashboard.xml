<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.DashboardActivity"
    tools:showIn="@layout/activity_dashboard">

    <android.support.v7.widget.CardView
        android:id="@+id/card_new_order"
        android:layout_marginTop="@dimen/margin28dp"
        android:layout_marginRight="@dimen/margin12dp"
        android:layout_marginLeft="@dimen/margin12dp"
        android:layout_width="match_parent"
        app:contentPadding="@dimen/padding5dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/ic_launcher_round"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="@dimen/font20sp"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:text="@string/new_order"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/order_history"
        android:layout_below="@id/card_new_order"
        android:layout_marginTop="@dimen/margin28dp"
        android:layout_marginRight="@dimen/margin12dp"
        android:layout_marginLeft="@dimen/margin12dp"
        android:layout_width="match_parent"
        app:contentPadding="@dimen/padding5dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/ic_launcher_round"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="@dimen/font20sp"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:text="@string/new_order"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_below="@id/order_history"
        android:id="@+id/raw_material"
        android:layout_marginTop="@dimen/margin28dp"
        android:layout_marginRight="@dimen/margin12dp"
        android:layout_marginLeft="@dimen/margin12dp"
        android:layout_width="match_parent"
        app:contentPadding="@dimen/padding5dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/ic_launcher_round"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="@dimen/font20sp"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:text="@string/new_order"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_below="@id/raw_material"
        android:id="@+id/expense"
        android:layout_marginTop="@dimen/margin28dp"
        android:layout_marginRight="@dimen/margin12dp"
        android:layout_marginLeft="@dimen/margin12dp"
        android:layout_width="match_parent"
        app:contentPadding="@dimen/padding5dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/ic_launcher_round"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="@dimen/font20sp"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:text="@string/new_order"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>